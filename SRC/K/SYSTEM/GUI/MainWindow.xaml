<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="MWOS" Height="1080" Width="1920">
    <Grid>
        <Image x:Name="walpaper" HorizontalAlignment="Center" Height="1080" Margin="0,0,0,0" VerticalAlignment="Bottom" Width="1920" Source="/background.png"/>
        <Rectangle HorizontalAlignment="Center" Height="40" Margin="0,964,0,0" Stroke="Transparent" VerticalAlignment="Bottom" Width="1920" Opacity="0.4" Fill="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}"/>
    </Grid>
</Window>
